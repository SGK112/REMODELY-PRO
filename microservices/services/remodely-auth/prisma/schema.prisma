// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                         String    @id @default(cuid())
  name                       String
  email                      String    @unique
  password                   String
  phone                      String    @unique
  userType                   UserType  @default(CUSTOMER)
  
  // Phone verification
  phoneVerified              Boolean   @default(false)
  phoneVerificationCode      String?
  phoneVerificationExpires   DateTime?
  phoneVerifiedAt            DateTime?
  
  // Terms and conditions
  agreeToTerms               Boolean   @default(false)
  agreeToTermsDate           DateTime?
  
  // Authentication tracking
  lastLogin                  DateTime?
  loginAttempts              Int       @default(0)
  lockedUntil                DateTime?
  
  // Audit fields
  createdAt                  DateTime  @default(now())
  updatedAt                  DateTime  @updatedAt

  // Relations
  shopifyStores              ShopifyStore[]

  @@map("users")
}

enum UserType {
  CUSTOMER
  CONTRACTOR
  ADMIN
}

// Shopify Store Connection - allows any user to connect their Shopify store
model ShopifyStore {
  id              String    @id @default(cuid())
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Store details
  storeDomain     String    @unique  // e.g., "my-store.myshopify.com"
  storeName       String?
  accessToken     String               // Encrypted Shopify access token
  scope           String?              // OAuth scopes granted

  // Store metadata
  productCount    Int       @default(0)
  orderCount      Int       @default(0)
  currency        String    @default("USD")

  // Connection status
  isActive        Boolean   @default(true)
  connectedAt     DateTime  @default(now())
  lastSyncAt      DateTime?

  // Audit fields
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@map("shopify_stores")
  @@index([userId])
  @@index([storeDomain])
}

